<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_weight="1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angle"
            android:textColor="@color/blue" />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X : "
                    android:id="@+id/angle_x" android:layout_weight="1"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Y : "
                      android:id="@+id/angle_y" android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acc"
            android:textColor="@color/blue" />

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:id="@+id/linearLayout">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="X : "
                      android:id="@+id/acc_x" android:layout_weight="1"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Y : "
                      android:id="@+id/acc_y" android:layout_weight="1"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Z : "
                      android:id="@+id/acc_z" android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gyro"
            android:textColor="@color/blue" />

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:id="@+id/linearLayout1">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="X : "
                      android:id="@+id/gyro_x" android:layout_weight="1"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Y : "
                      android:id="@+id/gyro_y" android:layout_weight="1"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Z : "
                      android:id="@+id/gyro_z" android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewSonars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sonars"
            android:textColor="@color/blue" />

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:id="@+id/linearLayout1">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Son_L : "
                      android:id="@+id/sonar_l" android:layout_weight="1"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Son_F_L : "
                      android:id="@+id/sonar_f_l" android:layout_weight="1"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Son_F_R : "
                      android:id="@+id/sonar_f_r" android:layout_weight="1"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Son_R : "
                      android:id="@+id/sonar_r" android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/rc_command"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RC_command : "
            android:textColor="@color/green" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="out : "
                android:id="@+id/out"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:gravity="top">

        	<CheckBox
        	    android:id="@+id/checkBox_X"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:checked="true"
        	    android:text="X" />

        	<CheckBox
            android:id="@+id/checkBox_Y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y" />
		</LinearLayout>
        
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="bottom">

            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="120" >

                <requestFocus />
            </EditText>

            <ImageButton
                    android:layout_width="150px"
                    android:layout_height="100px"
                    android:id="@+id/yaw_left" android:src="@drawable/rot_left"/>
            <ImageButton
                    android:layout_width="150px"
                    android:layout_height="100px"
                    android:id="@+id/yaw_right" android:src="@drawable/rot_right"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="top|right"
            android:src="@drawable/backgr" />

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                      android:layout_height="match_parent" android:id="@+id/linearLayout4"
                      android:gravity="bottom">
            <Button
                    android:layout_width="150px"
                    android:layout_height="100px"
                    android:text="Fly"
                    android:id="@+id/fly" android:layout_weight="1"/>
            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="5">
            </FrameLayout>
            <Button
                    android:layout_width="150px"
                    android:layout_height="100px"
                    android:text="Land"
                    android:id="@+id/land" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

